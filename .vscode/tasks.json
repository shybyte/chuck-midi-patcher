{
    "version": "0.1.0",
    "command": "sh",
    "args": [
        "-c"
    ],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "chuck start.ck",
            "args": [
                "chuck start.ck"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^\\[(.*)\\]:line\\((\\d+)\\)(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "taskName": "chuck add",
            "isBuildCommand": true,
            "args": [
                "chuck + ${file}"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^\\[(.*)\\]:line\\((\\d+)\\)(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "taskName": "chuck remove all",
            "isTestCommand": true,
            "args": [
                "chuck --remove.all"
            ]
        },
        {
            "taskName": "kill chuck",
            "args": [
                "chuck --kill"
            ]
        }
    ]
}